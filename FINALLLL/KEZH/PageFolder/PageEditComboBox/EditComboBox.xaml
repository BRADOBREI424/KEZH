                Grid.Column="2"
                            Margin="30 80 "
                 Style="{DynamicResource BtnMain1}"                
                materialDesign:ButtonAssist.CornerRadius="25"
                Grid.Row="3" Height="auto" Click="btOtmena_Click"  IsEnabled="False"/>

                    <Button x:Name="BtEdit3" Content="Сохранить"
