                 Grid.ColumnSpan="3" Grid.Row="2"
              materialDesign:HintAssist.Hint=" Семестр"
              FontSize="30" Margin="40 12 40 12"
                  Height="80"
              VerticalAlignment="Stretch" />


                    <Button x:Name="BtOtmena6" Content="Очистить"
                Grid.Column="2"      
                            Margin="20"
